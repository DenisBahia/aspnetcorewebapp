@model HomeModel
<h2>MEU PRIMEIRO PROJETO ASP.NET CORE MVC</h2>

<table border="1">
    <tr>
        <td>id</td>
        <td>Nome</td>
    </tr>

    @{
        foreach (var item in (List<HomeModel>)ViewBag.lista)
        {
            <tr>
                <td>@item.id.ToString()</td>
                <td>@item.Nome.ToString()</td>
            </tr>
        }
    }

</table>

<form asp-controller="Home" asp-action="Index" method="post">
    <input type="text" asp-for="id" />
    <input type="text" asp-for="Nome" />

    <input type="submit" value="Enviar" />
</form>